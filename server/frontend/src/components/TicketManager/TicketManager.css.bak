.tickets-management {
  padding: 24px;
  background-color: #f8f9fa;
  min-height: 100vh;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', sans-serif;
}

.tickets-container {
  max-width: 1400px;
  margin: 0 auto;
}

.tickets-header {
  text-align: center;
  margin-bottom: 40px;
  background: white;
  border-radius: 16px;
  padding: 32px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.07);
  border: 1px solid #e9ecef;
}

.tickets-title {
  font-size: 32px;
  font-weight: 700;
  color: #2c3e50;
  margin: 0 0 12px 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.tickets-subtitle {
  color: #6c757d;
  font-size: 16px;
  margin: 0;
  font-weight: 400;
}

.loading {
  text-align: center;
  padding: 40px;
  color: #6c757d;
  font-size: 16px;
}

.error {
  background: #f8d7da;
  color: #721c24;
  padding: 24px;
  border-radius: 12px;
  margin-bottom: 24px;
  border: 1px solid #f5c6cb;
  text-align: center;
  font-weight: 500;
}

.error button {
  background: #dc3545;
  color: white;
  border: none;
  padding: 10px 20px;
  border-radius: 6px;
  cursor: pointer;
  margin-top: 12px;
  font-weight: 600;
}

.stats-cards {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
  gap: 16px;
  margin-bottom: 32px;
}

.stats-card {
  background: white;
  border-radius: 12px;
  padding: 24px;
  text-align: center;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.07);
  border: 1px solid #e9ecef;
  transition: transform 0.2s ease;
}

.stats-card:hover {
  transform: translateY(-2px);
}

.stats-number {
  font-size: 32px;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 8px;
}

.stats-label {
  color: #6c757d;
  font-size: 14px;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.tickets-grid {
  display: grid;
  gap: 20px;
  grid-template-columns: repeat(auto-fill, minmax(400px, 1fr));
}

.ticket-card {
  background: white;
  border-radius: 12px;
  padding: 24px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.07);
  border: 1px solid #e9ecef;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.ticket-card:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
}

.ticket-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
  padding-bottom: 16px;
  border-bottom: 1px solid #e9ecef;
}

.ticket-id {
  font-weight: 700;
  color: #2c3e50;
  font-size: 18px;
}

.ticket-status {
  padding: 6px 12px;
  border-radius: 20px;
  font-size: 12px;
  font-weight: 600;
  text-transform: uppercase;
}

.status-open {
  background: #fff3cd;
  color: #856404;
  border: 1px solid #ffeaa7;
}

.status-pending {
  background: #fff3cd;
  color: #856404;
  border: 1px solid #ffeaa7;
}

.status-in_progress {
  background: #d1ecf1;
  color: #0c5460;
  border: 1px solid #bee5eb;
}

.status-resolved {
  background: #d4edda;
  color: #155724;
  border: 1px solid #c3e6cb;
}

.status-closed {
  background: #e2e3e5;
  color: #383d41;
  border: 1px solid #d6d8db;
}

.ticket-details {
  margin-bottom: 20px;
}

.ticket-detail-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10px;
  font-size: 14px;
}

.ticket-detail-label {
  color: #6c757d;
  font-weight: 500;
  flex: 1;
}

.ticket-detail-value {
  color: #2c3e50;
  font-weight: 600;
  flex: 2;
  text-align: right;
}

.ticket-detail-value.ticket-issue {
  text-align: left;
  line-height: 1.4;
}

.ticket-actions {
  display: flex;
  gap: 12px;
  margin-top: 20px;
}

.action-button {
  flex: 1;
  padding: 12px 16px;
  border: none;
  border-radius: 8px;
  font-weight: 600;
  font-size: 14px;
  cursor: pointer;
  transition: all 0.2s ease;
  text-transform: uppercase;
}

.view-button {
  background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
  color: white;
  box-shadow: 0 2px 4px rgba(0, 123, 255, 0.3);
}

.view-button:hover {
  transform: translateY(-1px);
  box-shadow: 0 4px 8px rgba(0, 123, 255, 0.4);
}

.no-tickets {
  text-align: center;
  padding: 80px 20px;
  color: #6c757d;
  background: white;
  border-radius: 12px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.07);
  border: 1px solid #e9ecef;
}

.no-tickets h3 {
  font-size: 28px;
  margin-bottom: 16px;
  color: #495057;
}

.no-tickets p {
  font-size: 16px;
  line-height: 1.6;
  max-width: 500px;
  margin: 0 auto;
}

.refresh-button {
  position: fixed;
  bottom: 30px;
  right: 30px;
  width: 60px;
  height: 60px;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  font-size: 20px;
  cursor: pointer;
  box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
  transition: all 0.2s ease;
  z-index: 1000;
}

.refresh-button:hover {
  transform: scale(1.1);
  box-shadow: 0 6px 16px rgba(102, 126, 234, 0.5);
}

/* Tabs Container */
.tabs-container {
  background: white;
  border-radius: 12px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.07);
  border: 1px solid #e9ecef;
  margin-bottom: 24px;
}

.tabs {
  display: flex;
  flex-wrap: wrap;
  gap: 4px;
  padding: 16px;
  border-bottom: 1px solid #e9ecef;
  background: #f8f9fa;
  border-radius: 12px 12px 0 0;
}

.tab {
  padding: 12px 20px;
  background: white;
  border: 1px solid #dee2e6;
  border-radius: 8px;
  cursor: pointer;
  font-weight: 600;
  font-size: 14px;
  transition: all 0.2s ease;
  color: #6c757d;
  white-space: nowrap;
}

.tab:hover {
  background: #e9ecef;
  transform: translateY(-1px);
  border-color: #adb5bd;
}

.tab.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-color: transparent;
  box-shadow: 0 2px 4px rgba(102, 126, 234, 0.3);
}

.tab-content {
  padding: 24px;
}

@media (max-width: 768px) {
  .tickets-management {
    padding: 16px;
  }
  
  .tickets-grid {
    grid-template-columns: 1fr;
  }
  
  .tabs {
    flex-direction: column;
    gap: 8px;
  }
  
  .tab {
    text-align: center;
    padding: 14px 16px;
  }
  
  .stats-cards {
    grid-template-columns: repeat(2, 1fr);
    gap: 12px;
  }
  
  .refresh-button {
    bottom: 20px;
    right: 20px;
    width: 50px;
    height: 50px;
    font-size: 18px;
  }
  
  .ticket-detail-row {
    flex-direction: column;
    gap: 4px;
  }
  
  .ticket-detail-value {
    text-align: left;
  }
  
  .tickets-header {
    padding: 20px;
  }
  
  .tickets-title {
    font-size: 24px;
  }
}
